extends start.pug

block content
    div
        a#signup.hiddenanchor
        a#signin.hiddenanchor

        .login_wrapper
            .animate.form.login_form
                section.login_content
                    form(method='POST')
                        h1='Login'
                        div
                            input.form_control(type='text' placeholder='Username' required)
                        div
                            input.form_control(type='password' placeholder='Password' required)
                        div
                            button.btn.btn-default.submit
                                ='Login'
                        .clearfix
                        .separator
                            .change-link
                                a.to_register(href='#signup')='Create Account'
                
            .animate.form.registration_form
                section.login_content
                    form(method='POST')
                        h1="Signup"
                        div
                            input.form_control(type='text' name="firstname" placeholder='First name' required)
                        div
                            input.form_control(type='text' name="lastname" placeholder='Last name' required)
                        div
                            input.form_control(type='email' name="email" placeholder='Email' required)
                        div
                            input.form_control(type='password' name="password" placeholder='Password' required)    
                        div
                            button.btn.btn-default.submit
                                ="Submit"
                        .clearfix
                        .separator
                            .change-link
                                a.to_register(href='#signin')='Login'
                            .clearfix
                            br/
                            div
                                h1="Smart Paula"
                                p="copyright 2017 Radboudumc REshape Center for Innovation"