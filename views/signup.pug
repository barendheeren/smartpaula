extends start.pug

block content
    div
        a#signup.hiddenanchor
        a#signin.hiddenanchor

        .login-wrapper
            .animate.form.login-form
                section.login_content
                    form(method='POST')
                        h1='Login'
                        div
                            input.form_control(type=text placeholder='Username' required)
                        div
                            input.form_control(type='password' placeholder='Password' required)
                        div
                            a.btn.btn-default.submit
                                ='Login'
                        .clearfix
                        .separator
                            .change-link
                                a.to_register(href='#signup')='Create Account'
                
            .animate.form.registration_form
                section.login_content
                    form(method='POST')
                        h1="Signup"
                        div
                            input.form_control(type='text' placeholder='First name' required)
                        div
                            input.form_control(type='text' placeholder='Last name' required)
                        div
                            input.form_control(type='email' placeholder='Email' required)
                        div
                            input.form_control(type='password' placeholder='Password' required)    
                        div
                            a.btn.btn-default submit
                                ="Submit"
                        .clearfix
                        .separator
                            .change-link
                                a.to_register(href='#signin')='Login'