extends portal.pug

block content
    .row
        .col-md-12.col-sm-12.col-xs-12
            .x_panel
                .x_title
                    h2="Gebruiker"
                .x_content
                    form.form-horizontal.form-label-left
                        .form-group
                            label.control-label.col-md-3.col-sm-3.col-xs-12(for='firstname')="First Name"
                            .col-md-6.col-sm-6.col-xs-12
                                input#firstname.form-control.col-md-7.col-xs-12(type='text' name='firstname' value=user.first_name)
                        .form-group
                            label.control-label.col-md-3.col-sm-3.col-xs-12(for='lastname')="Last Name"
                            .col-md-6.col-sm-6.col-xs-12
                                input#lastname.form-control.col-md-7.col-xs-12(type='text' name='lastname' value=user.last_name)
                        .form-group
                            label.control-label.col-md-3.col-sm-3.col-xs-12(for='email')="Email"
                            .col-md-6.col-sm-6.col-xs-12
                                input#email.form-control.col-md-7.col-xs-12(type='email' name='email' value=user.email)
                        .form-group
                            label.control-label.col-md-3.col-sm-3.col-xs-12(for='password')="Password"
                            .col-md-6.col-sm-6.col-xs-12
                                input#password.form-control.col-md-7.col-xs-12(type='password' name='password' value=user.password)